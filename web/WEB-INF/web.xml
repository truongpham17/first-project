<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MainController</servlet-name>
        <servlet-class>truongpmse.controllers.MainController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadInitData</servlet-name>
        <servlet-class>truongpmse.controllers.LoadInitData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>truongpmse.controllers.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AcceptController</servlet-name>
        <servlet-class>truongpmse.controllers.AcceptController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainController</servlet-name>
        <url-pattern>/MainController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadInitData</servlet-name>
        <url-pattern>/LoadInitData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateController</servlet-name>
        <url-pattern>/UpdateController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AcceptController</servlet-name>
        <url-pattern>/AcceptController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>LoadInitData</welcome-file>
    </welcome-file-list>
</web-app>
